<% layout('layout/boilerplate') -%>

  <div class="container d-flex justify-content-center align-items-center">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
          <img src="/image/login.webp" alt="Login" class="card-img-top img-fluid" width="500" height="375" />
          <div class="card-body">
            <h5 class="card-title">Register</h5>
            <form action="/register" method="POST" class="validated-form" novalidate>
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" required autofocus />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" required />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="d-grid gap-2">
                <button class="btn btn-success">Register</button>
              </div>
              <div class="mt-1">
                Already have an account?
                <a href="/login" class="link-primary">Log In</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>