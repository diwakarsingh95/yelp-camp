<% layout('layout/boilerplate') -%>

  <div class="container d-flex justify-content-center align-items-center">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow">
          <img src="/image/login.webp" alt="Login" class="card-img-top img-fluid" width="500" height="375"
            fetchpriority="high" />
          <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="/login" method="POST" class="validated-form" novalidate>
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" autofocus required />
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="d-grid gap-2">
                <button class="btn btn-success">Login</button>
              </div>
              <div class="mt-1">
                Don't have an account?
                <a href="/register" class="link-primary">Sign up</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>